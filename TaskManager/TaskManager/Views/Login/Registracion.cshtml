@model TaskManager.Models.UsuarioM

@{
    ViewBag.Title = "Registrarse";
}

<script src="https://www.google.com/recaptcha/api.js?onload=renderRecaptcha&render=explicit" async defer></script>
<script src='https://www.google.com/recaptcha/api.js'></script>
<link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

<!------ Include the above in your HEAD tag ---------->
<div class="container">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-7 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Log In</div>
            </div>
            <div style="padding-top:30px" class="panel-body">
                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                @using (Html.BeginForm("Registracion", null, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                {

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "label label-danger" })
                        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Nombre", Style = "margin-right:10px" })
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.ValidationMessageFor(m => m.Apellido, "", new { @class = "label label-danger" })
                        @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control", placeholder = "Apellido", Style = "margin-right:10px" })
                    </div>

                    <span class="label label-danger">@ViewData["errorEmail"]</span>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                        <span class="label label-danger">@ViewBag.errorMailEnUso</span>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "label label-danger" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-Mail", Style = "margin-right:10px" })
                    </div>


                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.ValidationMessageFor(m => m.Contrasena, "", new { @class = "label label-danger" })
                        @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control", placeholder = "Contraseña", Style = "margin-right:10px" })
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.ValidationMessageFor(m => m.Contrasena2, "", new { @class = "label label-danger" })
                        @Html.PasswordFor(m => m.Contrasena2, new { @class = "form-control", placeholder = "Confirmar Contraseña", Style = "margin-right:10px" })
                    </div>

                    <span class="label label-danger">@ViewBag.errorCaptcha</span>
                    <div class="g-recaptcha" data-sitekey="6LdRMGAUAAAAAFnLDcBzEFZWtfMY5lKnEvKbApU3" style="margin-top:10px"></div>




                    <div style="margin-top:10px" class="form-group">
                        <!-- Button -->
                        <div class="col-sm-12 controls">
                            <button type="submit" id="btn-login" href="#" class="btn btn-success">Registrarse  </button>
                            <button type="reset" id="btn-reset" href="#" class="btn btn-danger">Borrar Todo  </button>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>