@using TaskManager.Models
@model List<TareaViewModel>

@{
    ViewBag.Title = "Listar Tareas";
}

<h2>Listar</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Fecha Fin</th>
            <th>Nombre</th>
            <th>Prioridad</th>
            <th>Carpeta</th>
            <th>Estimado</th>
            <th>Completada</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarea in Model)
        {
            <tr>
                <td>@tarea.FechaFin</td>
                <td>@tarea.Nombre</td>
                <td>@tarea.Prioridad</td>
                <td>@tarea.Carpeta.Nombre</td>
                <td>@tarea.EstimadoHoras</td>
                <td>@tarea.Completada</td>
                <td>
                    @Html.ActionLink("Modificar", "Modificar", "Tarea", new { IdTarea = tarea.IdTarea },null)
                    @Html.ActionLink("Detalle", "Detalle", "Tarea", new { IdTarea = tarea.IdTarea }, null)
                    @Html.ActionLink("Eliminar", "Eliminar", "Tarea", new { IdTarea = tarea.IdTarea }, null)
                </td>
            </tr>
        }
    </tbody>
</table>