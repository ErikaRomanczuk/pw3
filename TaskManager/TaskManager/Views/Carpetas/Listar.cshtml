@using TaskManager.Controllers
@using TaskManager.Models
@model List<Carpeta>

@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var carpeta in Model)
        {
            <tr>
                <td>@carpeta.IdCarpeta</td>
                <td>@carpeta.Nombre</td>
                <td>@carpeta.Descripcion</td>
                <td>@Html.ActionLink("Modificar", "Modificar", new { idCarpeta = carpeta.IdCarpeta })</td>
            </tr>
        }
    </tbody>
</table>
