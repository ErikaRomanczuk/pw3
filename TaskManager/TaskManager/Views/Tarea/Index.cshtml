@using TaskManager.Models
@model List<TareaM>

@{
    ViewBag.Title = "Listar Tareas";
}

<div class="row">
    <div class="panel">

        <div class="panel-heading">
            <h3> FILTRO </h3>
        </div>
        <div class="panel-body">
            <form method="get" action="Index" calss="form-control">
                <div class="form-group">
                    <label for="filtro">Estado</label>
                    <div class="col-md-12">
                        <select for="filtro" id="filtro" name="filtro" class="form-control">
                            <option value=""> Todos</option>
                            <option value="1">Completas</option>
                            <option value="0">Incompletas</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Aplicar Filtros" class="btn btn-primary pull-right" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Horas Estimadas</th>
            <th>Fecha Fin</th>
            <th>Prioridad</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarea in Model)
        {
            <tr>
                <td>@tarea.IdTarea</td>
                <td>@tarea.Nombre</td>
                <td>@tarea.Descripcion</td>
                <td>@tarea.EstimadoHoras</td>
                <td>@tarea.FechaFin</td>
                <td>@tarea.Prioridad</td>
                <td>
                    @Html.ActionLink("Modificar", "Modificar", new { IdTarea = tarea.IdTarea })
                    @Html.ActionLink("Detalle", "Detalle", new { IdTarea = tarea.IdTarea })
                    @Html.ActionLink("Eliminar", "Eliminar", new { IdTarea = tarea.IdTarea })
                </td>
            </tr>
        }
    </tbody>
</table>
