@using TaskManager.Models
@model ComentarioTareaM
@{
    ViewBag.Title = "Crear";
}
<div class="container">
    <h2>Crear Comentario</h2>

    @using (Html.BeginForm("CrearComentarioTareaM", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <h4>Complete los datos para crear el comentario</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(x => x.Texto, new { @class = "col-md-2 control-label" })
            <div class="col-md-12">
                @Html.TextAreaFor(x => x.Texto, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Texto, "", new { @class = "text-danger" })
            </div>
        </div>

        <input type="hidden" name="IdTarea" value="@ViewBag.IdTarea" />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>

    }
</div>